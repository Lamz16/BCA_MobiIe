<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/tvTitleJmlhUang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Uang:"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/inputNominal"
        style="@style/MyEditTextStyle3"
        android:layout_width="296dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:inputType="number"
        android:maxLength="11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvTitleJmlhUang"
        app:layout_constraintTop_toBottomOf="@id/tvTitleJmlhUang" />

    <ImageButton
        android:id="@+id/cancelBtn"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/clickcancelalertlog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/inputNominal"
        app:layout_constraintTop_toBottomOf="@+id/inputNominal" />

    <ImageButton
        android:id="@+id/okBtn"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/clickokinputselector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/inputNominal"
        app:layout_constraintTop_toBottomOf="@+id/inputNominal" />

</androidx.constraintlayout.widget.ConstraintLayout>