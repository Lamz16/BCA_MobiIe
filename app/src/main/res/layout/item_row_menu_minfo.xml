<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Toolbar
            android:id="@+id/titleTopMenu"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/brown_bg_title_menu">
            <TextView
                android:id="@+id/titleMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansregular"
                android:text="Info RDN"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center" />
        </Toolbar>

        <Toolbar
            android:id="@+id/OptionMenu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btnoptionmenuselector">

            <TextView
                android:id="@+id/teksOptionMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensanssemibold"
                android:text="Info Saldo"
                android:textColor="@drawable/textmenuselector"
                android:textSize="16sp"
                android:gravity="center" />
        </Toolbar>

    </LinearLayout>

</androidx.cardview.widget.CardView>

