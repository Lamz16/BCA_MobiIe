<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AntarrekeningActivity"
    android:background="@drawable/bggraybig">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTfArek"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@drawable/straightline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAppbarTfArek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensanssemibold"
        android:text="@string/m_transfer"
        android:textColor="@color/blue_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/indicatorSignalArek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/indicatorSignalArek" />

    <ImageButton
        android:id="@+id/btnSend"
        android:layout_width="66dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toolbarTfArek"
        android:layout_marginEnd="8dp"
        android:background="@drawable/clicksendtopbar"/>

    <ImageView
        android:id="@+id/indicatorSignalArek"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/btnSend"
        app:layout_constraintEnd_toStartOf="@id/btnSend"
        app:layout_constraintBottom_toBottomOf="@id/btnSend"
        android:src="@drawable/navconngreen"
        android:layout_marginEnd="4dp" />

    <TextView
        android:id="@+id/tvNotujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/opensansbold"
        android:text="Nomor Rekening Tujuan"
        android:textColor="@color/blue_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarTfArek"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNotujuan">

        <ImageView
            android:id="@+id/bgTransfer"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:scaleType="fitStart"
            android:src="@drawable/smallcolumn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputRek1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/bgTransfer"
            app:layout_constraintStart_toStartOf="@id/bgTransfer"
            app:layout_constraintEnd_toEndOf="@id/bgTransfer"
            android:maxLength="10"
            android:textSize="17sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:hint="Rekening 1"
            android:drawableEnd="@drawable/ic_arrow"
            android:inputType="number"
            android:textColor="@color/blue_text_color"
            android:fontFamily="@font/opensansregular"
            android:background="@android:color/transparent"/>

        <View
            android:id="@+id/batas1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="9dp"
            app:layout_constraintEnd_toEndOf="@+id/bgTransfer"
            app:layout_constraintStart_toStartOf="@+id/bgTransfer"
            app:layout_constraintTop_toBottomOf="@id/inputRek1" />

        <EditText
            android:id="@+id/inputRek2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            app:layout_constraintTop_toBottomOf="@id/batas1"
            app:layout_constraintStart_toStartOf="@id/bgTransfer"
            app:layout_constraintEnd_toEndOf="@id/bgTransfer"
            android:maxLength="10"
            android:textSize="17sp"
            android:hint="Rekening 2"
            android:layout_marginTop="8dp"
            android:drawableEnd="@drawable/ic_arrow"
            android:inputType="number"
            android:textColor="@color/blue_text_color"
            android:fontFamily="@font/opensansregular"
            android:background="@android:color/transparent"/>

        <View
            android:id="@+id/batas2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="9dp"
            app:layout_constraintEnd_toEndOf="@+id/bgTransfer"
            app:layout_constraintStart_toStartOf="@+id/bgTransfer"
            app:layout_constraintTop_toBottomOf="@id/inputRek2" />

        <EditText
            android:id="@+id/inputRek3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/batas2"
            app:layout_constraintStart_toStartOf="@id/bgTransfer"
            app:layout_constraintEnd_toEndOf="@id/bgTransfer"
            android:maxLength="10"
            android:textSize="17sp"
            android:hint="Rekening 3"
            android:layout_marginStart="8dp"

            android:layout_marginTop="8dp"
            android:drawableEnd="@drawable/ic_arrow"
            android:inputType="number"
            android:textColor="@color/blue_text_color"
            android:fontFamily="@font/opensansregular"
            android:background="@android:color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



