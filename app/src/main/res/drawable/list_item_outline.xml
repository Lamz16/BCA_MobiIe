<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="10dp"
                android:color="@color/bgalert"/> <!-- Outline Color -->

        </shape>
    </item>
    <!-- Foreground -->
    <item android:bottom="4dp" android:top="4dp" android:right="4dp" android:left="4dp">
        <shape>
            <solid android:color="@android:color/black"/> <!-- Item Color -->
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>
